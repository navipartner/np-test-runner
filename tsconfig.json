{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"outDir": "out",
		"lib": [
			"ES2021",
			"ES2021.String"
		],
		"sourceMap": true,
		"rootDir": "src",
		// strict disabled because: https://github.com/vuejs/vue-loader/issues/1915 + related problems in the existing code;
		"strict": false   /* disable strict type-checking options */
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
		,"forceConsistentCasingInFileNames": false
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
